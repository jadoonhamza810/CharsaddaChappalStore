<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="buyer.ProductDetailsActivity">

    <TextView
        android:id="@+id/product_details_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:padding="5dp"
        android:textStyle="italic"
        android:background="@drawable/buttons"
        android:textColor="@android:color/black"
        />

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/product_details_image_flipper"
        android:layout_marginTop="5dp"
        android:flipInterval="2000"
        android:elevation="5dp">

        <ImageView
            android:id="@+id/product_details_image1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/product_details_image2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/product_details_image3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"/>

    </ViewFlipper>

    <TextView
        android:id="@+id/product_details_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_details_image_flipper"
        android:text="Product Name"
        android:layout_marginTop="4dp"
        android:textAlignment="center"
        android:padding="5dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/product_details_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_details_name"
        android:text="Code"
        android:layout_marginTop="4dp"
        android:textAlignment="center"
        android:padding="5dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/product_details_slogan_size"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_details_code"
        android:text="Size: "
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:background="#D3D3D3"
        android:textAlignment="center"
        android:padding="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/product_details_size"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_details_code"
        android:layout_toRightOf="@+id/product_details_slogan_size"
        android:text="Size"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:padding="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/product_details_slogan_color"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_details_code"
        android:layout_toLeftOf="@+id/product_details_color"
        android:text="Color: "
        android:layout_marginTop="30dp"
        android:background="#D3D3D3"
        android:textAlignment="center"
        android:padding="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/product_details_color"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/product_details_code"
        android:text="Color"
        android:textAlignment="center"
        android:padding="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/product_details_slogan_price"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_details_size"
        android:text="Price= Rs "
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:background="#D3D3D3"
        android:textAlignment="center"
        android:padding="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/product_details_price"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_details_size"
        android:layout_toRightOf="@+id/product_details_slogan_price"
        android:text="Price"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:padding="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/product_details_slogan_discount"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_details_size"
        android:layout_toLeftOf="@+id/product_details_discount"
        android:text="Discount%:"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:background="#D3D3D3"
        android:textAlignment="center"
        android:padding="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/product_details_discount"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/product_details_size"
        android:text="Discount"
        android:textAlignment="center"
        android:padding="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/product_details_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_details_price"
        android:text="Description"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:padding="5dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        />
    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/product_details_quantity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_details_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:textSize="10sp"
        app:initialNumber="1"
        app:finalNumber="10">
    </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

    <Button
        android:id="@+id/product_details_add_to_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Add to Cart"
        android:background="@drawable/buttons"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="18sp"
       android:layout_alignParentBottom="true"
        android:layout_marginTop="6dp"
        android:padding="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        />



</RelativeLayout>