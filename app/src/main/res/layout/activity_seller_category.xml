<?xml version="1.0" encoding="utf-8"?>
  <RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context="sellers.SellerCategoryActivity">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/category_seller_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

      <de.hdodenhof.circleimageview.CircleImageView
          android:id="@+id/category_seller_profile_image"
          android:layout_width="60dp"
          android:layout_height="55dp"
          android:src="@drawable/profile"
          app:civ_border_width="2dp"
          app:civ_border_color="#FF000000">

      </de.hdodenhof.circleimageview.CircleImageView>

    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/category_seller_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="40dp"
        android:text="seller name"
        android:textStyle="italic"
        android:textSize="10sp"
        android:textColor="@android:color/black">

    </TextView>

  </RelativeLayout>

  <TextView
      android:id="@+id/slogan_category"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="55dp"
      android:text="Select category"
      android:textAlignment="center"
      android:textSize="26sp"
      android:textStyle="bold"
      android:textColor="@color/white"
      />

  <LinearLayout
      android:id="@+id/linear1_category_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/slogan_category"
      android:orientation="horizontal"
      android:layout_centerHorizontal="true"
      android:gravity="center"
      android:layout_marginTop="45dp"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp">

    <ImageView
        android:id="@+id/category_charsadda"
        android:layout_width="100dp"
        android:layout_height="100dp"
    android:src="@drawable/charsadda_chappal"/>


    <ImageView
        android:id="@+id/category_peshawari"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/peshawari_chappal2"/>


    <ImageView
        android:id="@+id/category_quetta"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
    android:src="@drawable/quetta_chappal"/>


  </LinearLayout>

  <LinearLayout
      android:id="@+id/linear2_category_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/linear1_category_layout"
      android:orientation="horizontal"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/category_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Charsadda"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/category_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Peshawari "
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/category_name3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Quetta"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        />
  </LinearLayout>


  <LinearLayout
      android:id="@+id/linear3_category_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/linear2_category_layout"
      android:orientation="horizontal"
      android:layout_centerHorizontal="true"
      android:gravity="center"
      android:layout_marginTop="45dp"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp">

    <ImageView
        android:id="@+id/category_kaptaan"
        android:layout_width="100dp"
        android:layout_height="100dp"
     android:src="@drawable/kaptaan_chappal"/>


    <ImageView
        android:id="@+id/category_norozi"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
     android:src="@drawable/norozi_chappal"/>


    <ImageView
        android:id="@+id/category_shikari"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
    android:src="@drawable/shikari_chappal"/>

  </LinearLayout>

  <LinearLayout
      android:id="@+id/linear4_category_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/linear3_category_layout"
      android:orientation="horizontal"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="15dp">

    <TextView
        android:id="@+id/category_name4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Kaptaan"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/category_name5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:text="Norozi "
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/category_name6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="Shikari"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/linear5_category_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/linear4_category_layout"
      android:orientation="horizontal"
      android:layout_centerHorizontal="true"
      android:gravity="center"
      android:layout_marginTop="45dp">

    <ImageView
        android:id="@+id/category_handmade"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="40dp"
         android:src="@drawable/handmade_chappal"/>


    <ImageView
        android:id="@+id/category_leather"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/leather"/>


  </LinearLayout>

  <LinearLayout
      android:id="@+id/linear6_category_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/linear5_category_layout"
      android:orientation="horizontal"
      android:layout_centerHorizontal="true"
      android:gravity="center"
      android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/category_name7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:text="Hand made"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/category_name8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leather"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        />
  </LinearLayout>



  </RelativeLayout>